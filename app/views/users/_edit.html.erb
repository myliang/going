<%= render "shared/new_edit", _title: "#{t("activerecord.models.user")} / #{@record.email}", _method: :put, _path: user_path(@record) do |f| %>

  <div class="required field <%unless @record.errors[:email].empty?%>error<%end%>">
    <label><%= User.human_attribute_name("email")%></label>
    <%= f.email_field :email, required: true %>
  </div>
  <div class="<%= @record.is_admin? ? "disabled " : ""%>field">
    <label><%= User.human_attribute_name("role") %></label>
    <%= f.select :role_id, ["", ""] + Role.all.map{|r| [r.name, r.id]}, {}, class: "ui search dropdown" %>
  </div>
  <div class="<%= @record.is_admin? ? "disabled " : ""%>field">
    <label><%= User.human_attribute_name("state") %></label>
    <%= f.select :state, ["", ""] + User::STATE_ALL, {}, class: "ui dropdown" %>
  </div>

<% end %>
